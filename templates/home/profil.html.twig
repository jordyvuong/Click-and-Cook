{% extends 'base.html.twig' %}

{% block title %}Profil - Click-and-Cook{% endblock %}

{% block body %}
<section class="profile">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="{{ asset(app.user.picture ? 'uploads/profile_pictures/' ~ app.user.picture : 'https://via.placeholder.com/150') }}" 
                        alt="Profile Picture" class="rounded-circle img-fluid mb-3" style="width: 150px; height: 150px;">
                        <h3>{{ app.user.username }}</h3>
                        <p class="text-muted">{{ app.user.email }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h4>Informations personnelles</h4>
                        <hr>
                        <p><strong>Nom :</strong> {{ app.user.username|default('Non renseigné') }}</p>
                        <p><strong>Email :</strong> {{ app.user.email }}</p>

                        <h4 class="mt-4">Actions</h4>
                        <hr>
                        <a href="{{ path('profile_edit') }}" class="btn btn-custom">Modifier mon profil</a>
                        <a href="{{ path('app_logout') }}" class="btn btn-danger">Se déconnecter</a>
                    </div>
                </div>
            
            </div>
               <div x-data="{ showMessage: false }">
    <button @click="showMessage = true" class="btn btn-primary">Voir vos recettes</button>
    <p x-show="showMessage" x-transition class="mt-3 alert alert-info">
        Vous n'avez pas créé de recette. <a href="{{ path('recipe_add')}}">Créez en une.</a> 
    </p>
</div>
        </div>
    </div>
</section>

{% endblock %}