{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="{{ asset('assets/styles/styles.css') }}">
{% endblock %}
{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<header class="bg-white shadow-sm py-3 mb-4">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light p-0">
            <h1 class="h4 navbar-brand mb-0">Click-and-Cook</h1>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a href="{{ path('app_home') }}" class="nav-link text-dark">Accueil</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-dark">Recettes</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-dark">Blog</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-dark">A propos</a></li>
                </ul>
                <div class="d-flex flex-column flex-lg-row gap-2">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="#" class="btn btn-outline-secondary">Ajouter une recette</a>
                    <a href="{{ path('profile') }}" class="btn btn-custom">Profil</a>
                    {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">Se connecter</a>
                    <a href="#" class="btn btn-custom">S'inscrire</a>
                    {% endif %}
                </div>
            </div>
        </nav>
    </div>
</header>

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white text-center py-4">
                    <h2 class="h4 mb-0">Modifier mon profil</h2>
                </div>
                <div class="card-body py-4">
                    <!-- Photo de profil -->
                    <div class="text-center mb-4">
                        {% if app.user.picture %}
                            <img src="{{ asset('uploads/profile_pictures/' ~ app.user.picture) }}" 
                                 alt="Photo de profil" 
                                 class="rounded-circle img-fluid shadow-sm" 
                                 style="width: 150px; height: 150px;">
                        {% else %}
                            <img src="https://via.placeholder.com/150" 
                                 alt="Photo de profil par dÃ©faut" 
                                 class="rounded-circle img-fluid shadow-sm" 
                                 style="width: 150px; height: 150px;">
                        {% endif %}
                    </div>

                    <!-- Formulaire -->
                    {{ form_start(form, { 'attr': { 'enctype': 'multipart/form-data', 'class': 'row g-3' } }) }}
                        <div class="col-md-6">
                            {{ form_row(form.username, { 'label': 'Nom d\'utilisateur', 'attr': { 'class': 'form-control' } }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.email, { 'label': 'Adresse email', 'attr': { 'class': 'form-control' } }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.picture, { 'label': 'Photo de profil', 'attr': { 'class': 'form-control' } }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.plainPassword, { 'label': 'Mot de passe', 'attr': { 'class': 'form-control' } }) }}
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-custom btn-lg w-50">Enregistrer</button>
                        </div>
                    {{ form_end(form) }}

                    <!-- Bouton Retour -->
                    <div class="text-center mt-4">
                        <a href="{{ path('profile') }}" class="btn btn-outline-danger">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
